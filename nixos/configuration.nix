# Extends configuration generated by NixOS installer with homelab specific stuff

{ config, pkgs, ... }:

{
  imports = [
    ./services.nix
  ];

  # Support NFS filesystems.
  boot.supportedFilesystems = [ "nfs" ];

  users.users.vitaly = {
    isNormalUser = true;
    description = "Vitaly";
    extraGroups = [ "networkmanager" "wheel" ];
    packages = with pkgs; [];
    openssh.authorizedKeys.keys = [
      "ssh-rsa  cardno:000615499727"
      "ssh-rsa  cardno:000615499738"
    ];
  };

  environment.systemPackages = with pkgs; [
    git
    vim
    curl
    htop-vim
  ];


  # Enable the OpenSSH daemon.
  services.openssh = {
    enable = true;
    settings.PasswordAuthentication = false;
    settings.KbdInteractiveAuthentication = false;
  };
}
